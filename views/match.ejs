<% layout('./Layout/navebar') -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<body class="p-3 m-0 border-0 bg-light" style="margin-top: 2% !important; padding-top: 3% !important;">
    <div class="container">
        <div class="card shadow-lg p-4 mb-5 bg-white rounded">
            <h1 class="text-center mb-4 text-primary">New Tournament Form</h1>
            <form method="post" action="/match/<%=id%>">
                <!-- Team A -->
                <div class="mb-3">
                    <label for="teamA" class="form-label">Team A</label>
                    <input type="text" id="teamA" name="teamA" class="form-control" placeholder="Enter Team A Name" required>
                </div>

                <!-- Team B -->
                <div class="mb-3">
                    <label for="teamB" class="form-label">Team B</label>
                    <input type="text" id="teamB" name="teamB" class="form-control" placeholder="Enter Team B Name" required>
                </div>

                <!-- Match Type -->
                <div class="mb-3">
                    <label for="matchType" class="form-label">Match Type</label>
                    <input type="text" id="matchType" name="matchType" class="form-control" placeholder="e.g., Semi-Final" required>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-block">Add Match</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
